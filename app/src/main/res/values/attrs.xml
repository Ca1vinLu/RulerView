<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RulerView">
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="unit" format="string" />
        <attr name="unitValue" format="integer" />
        <attr name="valueInterval" format="integer" />
        <attr name="textInterval" format="integer" />
        <attr name="value" format="float" />

        <attr name="lineColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="lineMargin" format="dimension" />
        <attr name="lineBoldWidth" format="dimension" />
        <attr name="lineNormalWidth" format="dimension" />
        <attr name="lineMaxLength" format="dimension" />
        <attr name="lineNormalLength" format="dimension" />
        <attr name="lineLongLength" format="dimension" />
        <attr name="textValueMargin" format="dimension" />
        <attr name="largeTextSize" format="dimension" />
        <attr name="smallTextSize" format="dimension" />

        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />


        <attr name="openCorrection" format="boolean" />

        <attr name="rulerGravity">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="left" value="2" />
            <enum name="right" value="3" />
        </attr>

    </declare-styleable>

</resources>